@{
    ViewData["Title"] = "Editar contatos";
}

<div class="text-center">

    <h1 class="display-4">Editar contato</h1>
    <br />
</div>

<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato" name="nome">
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite o e-mail do contato" name="email">
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o celular do contato" name="celular">
    </div>
    <button type="submit" class="btn btn-primary   ">Alterar</button>
    <a asp-action="Index" asp-controller="Contato" role="button" class="btn btn-secondary">Voltar</a>
</form>
