@model ControleDeContatos.Models.Contact
@{
    ViewData["Title"] = "Cadastrar contatos";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar contato</h1>
    <br />
</div>

<form asp-controller="Contact" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" placeholder="Digite o e-mail do contato" asp-for="Email">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="phone">Celular</label>
        <input type="number" class="form-control" placeholder="Digite o celular do contato" asp-for="Phone">
        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a asp-action="Index" asp-controller="Contact" role="button" class="btn btn-secondary">Voltar</a>
</form>
