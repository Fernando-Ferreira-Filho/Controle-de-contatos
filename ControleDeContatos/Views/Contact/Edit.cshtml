@model Contact

@{
    ViewData["Title"] = "Editar contatos";
}

<div class="text-center">

    <h1 class="display-4">Editar contato</h1>
    <br />
</div>

<form asp-controller="Contact" asp-action="Edit" method="post">
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" placeholder="Digite o e-mail do contato" asp-for="Email" value="@Model.Email">
    </div>
    <div class="form-group">
        <label for="phone">Celular</label>
        <input type="number" class="form-control" placeholder="Digite o celular do contato" asp-for="Phone" value="@Model.Phone">
    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a asp-action="Index" asp-controller="Contact" role="button" class="btn btn-secondary">Voltar</a>
</form>
