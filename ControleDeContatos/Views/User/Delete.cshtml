@model User
@{
    ViewData["Title"] = "Apagar usuario";
}

<div class="text-center">

    <h3>Realmente deseja apagar o usuario @Model.Name?</h3>

</div>
<br />

<h3 class="display-4">Detalhes</h3>
<br/>
<div >
    <p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
    <p>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</p>
    <p>@Html.DisplayNameFor(model => model.Login): @Html.DisplayFor(model => model.Login)</p>
    <p>@Html.DisplayNameFor(model => model.Profile): @Html.DisplayFor(model => model.Profile)</p>
</div>

<br>

<form asp-controller="User" asp-action="Delete" method="post">
    <input type="hidden" asp-for="@Model.Id"/>
    <button type="submit" class="btn btn-danger">Confirmar exclusão</button>
    <a class="btn btn-primary" role="button" asp-action="Index" asp-controller="User">Cancelar exclusão</a>
</form>


